<div class="row">



      <div class="col-lg-8">
      <div class="col-12">
      <div class="section-title-sm">
      	<h3>Workout details</h3>
       </div>
        <div class="workout-container">
         <div class="workout-content">
          <h5>{{workout.type}}<span> | </span>{{workout.location}}</h5>
               <h2>{{workout.title}}</h2>
         <h4><span>{{workout.date}}</span> <span>{{workout.time}}</span></h4>
           <h4><span>{{workout.duration}}</span> Minutes</h4>
           <p>{{workout.description}}</p>
            <h4>Join the workout</h4>
                <div class="workout-btn">
                  <h5 class="attend-comment" id="attend-comment" >You are registered.</h5>
                 <button class="btn" id="attend-button" data-id="{{workout.id}}" data-source="{{user.id}}">COUNT ME IN!</button>
            </div>
          </div>
		     </div>
      </div>
      </div>


      <div class="col-lg-4">
      <div class="col-12">
      <div class="section-title-sm">
      	<h3>Your Host</h3>
      </div>
        <div class="host-info">
        <div class="inner">
           <h4>{{workout.user.firstName}} {{workout.user.lastName}}</h4>
           <p>{{workout.user.bio}}</p>
        </div>
      </div>
      </div>
      <div class="col-12">
      <div class="section-title-sm">
      	<h3>Location</h3>
      </div>
         <div class="group-map">
            <div class="map-area maps" id="map" style="height: 400px; Width: 100%;" data-gps="{{workout.lng}},{{workout.lat}}">>
            </div>
            <div class="map-content"> 
            <h4>{{workout.address}}</h4>
            <a href="{{workout.url}}" target="_blank" class="read-more">View on Google Maps</a> 
          </div>
        </div>
      </div>
    </div>
</div>

<script src="../../js/workout.js"></script>