<div class="row">



      <div class="col-lg-8">
      <div class="col-12">
      <div class="section-title-sm">
      	<h3>Workout details</h3>
       </div>
        <div class="workout-container">
         <div class="workout-content">
          <h2>{{workout.title}}</h2>
           <h3>{{workout.type}}</h3>
           <h4>Date: <span>{{workout.date}}</span></h4>
           <h4>Time: <span>{{workout.time}}</span></h4>
           <h4>Duration: <span>{{workout.duration}}</span></h4>
           {{workout.description}}
            <h3><i class="fa-solid fa-people-group me-2"></i> Attendees</h3>
            <div class="">
                <a href="#" class="btn btn-primary">Count me in!</a>          
            </div>
            <div class="">
                <a href="#" class="btn btn-secondary">I can't make it anymore</a>          
            </div>
         </div>
		     </div>
      </div>
      </div>


      <div class="col-lg-4">
      <div class="col-12">
      <div class="section-title-sm">
      	<h3>Your Host</h3>
      </div>
        <div class="host-info">
        <div class="inner">
              {{!-- <h4>{{user.firstname user.lastname}}</h4>
              <p>{{user.bio}}</p> --}}
        </div>
      </div>
      </div>
      <div class="col-12">
      <div class="section-title-sm">
      	<h3>Location</h3>
      </div>
         <div class="group-map">
            <div class="map-area maps" id="map" style="height: 400px; Width: 100%;" data-gps="-37.8199669,144.9834493">
            </div>
            <div class="map-content"> 
            <h4>{{workout.address}}</h4>
            <a href="{{workout.url}}" target="_blank" class="read-more">View on Google Maps</a> 
          </div>
        </div>
      </div>
    </div>
</div>

<script src="../../js/workout.js"></script>