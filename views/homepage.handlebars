    <div class="row">
      <div class="col-12 column" id="workout-list">
      {{#each workout as |workout| }}
      
        <div class="workout-list-container {{workout.type}}" id="workout{{workout.id}}" data-sort="{{workout.lng}},{{workout.lat}}" data-selected="{{workout.type}}">
           <div class="col-lg-8">
         <div class="workout-list-content">
           <h5>{{workout.type}}</h5>
           <h3>{{workout.title}}</h3>
            <p>
              {{workout.description}}
            </p>
            <h6>{{workout.date}} <span>|</span> {{workout.time}} <span>|</span> {{workout.duration}}min</h6>
            <div class="event-btn">
               <a href="/workout/{{workout.id}}">VIEW WORKOUT</a>
            </div>
          </div>
          </div>
           <div class="col-lg-4">
          <div class="workout-list-map">
           <div class="map-area maps" id="map{{workout.id}}" style="height: 350px; Width: 100%;" data-gps="{{workout.lng}},{{workout.lat}}"></div>
          </div>
        </div>
        </div>
        {{/each}}
    </div>
