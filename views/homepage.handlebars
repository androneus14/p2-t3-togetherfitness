 <div id="filter-btn" class="filter-menu">
  <button class="btn workout-options" onclick="filterSelection('Run')"> Run</button>
  <button class="btn workout-options" onclick="filterSelection('Walk')"> Walk</button>
  <button class="btn workout-options" onclick="filterSelection('Cycle')"> Cycle</button>
  <button class="btn workout-options" onclick="filterSelection('Weights')"> Weights</button>
  <button class="btn workout-options" onclick="filterSelection('HIIT')"> HIIT</button>
